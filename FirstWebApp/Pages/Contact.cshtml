@page
@model FirstWebApp.Pages.ContactModel
@{
    ViewData["Title"] = "Contact Page";
}
<h3>Contact Form</h3>
@if (Model.hasData)
{
    <p>Hello @Model.firstname @Model.lastname</p>
    <p>We received your following message correctly:</p>
    <p>@Model.message</p>
}
<div class="container">
    <form method="post">
    <label for="fname">Firstname</label><br />
    <input type="text" id="fname" name="Firstname"><br/>
    <label for="lname">lastname</label><br />
    <input type="text" id="lname" name="lastname"><br/>
    <label for="message">message</label><br />
    <textarea class="rounded-md" name="message" id="message" style="height: 100px;" cols="30" rows="10"></textarea><br/>
    <button class="bg-green-600 rounded-md p-1">send</button>
    </form>
</div>