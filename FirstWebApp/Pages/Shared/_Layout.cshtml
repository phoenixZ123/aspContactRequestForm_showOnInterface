<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FirstWebApp</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FirstWebApp.styles.css" asp-append-version="true" />

    <style>
        *{
            font-family:'Gill Sans', 'Gill Sans MT', 'Trebuchet MS', sans-serif;
        }
    </style>
</head>
<body>
    <header>
        <nav class="container">
            <div class="flex m-auto">
                <a class="font-monospace text-20 uppercase ml-10" asp-area="" asp-page="/Index">ContactRequestForm</a>
                <button class="" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="">
                    <div class="flex justify-content-between ml-[300px]">
                        <div class="mr-5 active:text-green-800">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </div>
                        <div class="mr-5 active:text-green-800">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </div>
                        <div class="mr-5 active:text-green-800">
                            <a class="nav-link text-gray" asp-area="" asp-page="/About">About</a>
                        </div>
                        <div class="active:text-green-800">
                            <a class="nav-link text-gray" asp-area="" asp-page="/Contact">Contact</a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container text-center">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ContactFrom - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

   
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>